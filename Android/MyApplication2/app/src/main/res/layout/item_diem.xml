<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="15dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtTenMonHoc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/textlines"
        android:fontFamily="@font/linden_hill"
        android:gravity="center_vertical"
        android:text="Co do du lieu"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/guideline88"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtDiem30"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/textlines"
        android:fontFamily="sans-serif"
        android:gravity="center|center_vertical"
        android:text="TextView"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/txtTenMonHoc"
        app:layout_constraintEnd_toStartOf="@+id/txtDiem70l1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/txtTenMonHoc"
        app:layout_constraintTop_toTopOf="@+id/txtTenMonHoc"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtDiem70l1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/textlines"
        android:fontFamily="sans-serif"
        android:gravity="center|center_vertical"
        android:text="TextView"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/txtDiem30"
        app:layout_constraintEnd_toStartOf="@+id/txtDiem70l2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/txtDiem30"
        app:layout_constraintTop_toTopOf="@+id/txtDiem30" />

    <TextView
        android:id="@+id/txtDiem70l2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/textlines"
        android:fontFamily="sans-serif"
        android:gravity="center|center_vertical"
        android:text="TextView"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/txtDiem70l1"
        app:layout_constraintEnd_toStartOf="@+id/txtDiemTB"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/txtDiem70l1"
        app:layout_constraintTop_toTopOf="@+id/txtDiem70l1" />

    <TextView
        android:id="@+id/txtDiemTB"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/textlines"
        android:fontFamily="sans-serif"
        android:gravity="center|center_vertical"
        android:text="TextView"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/txtDiem70l2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtDiem70l2"
        app:layout_constraintTop_toTopOf="@+id/txtDiem70l2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline88"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.39" />
</androidx.constraintlayout.widget.ConstraintLayout>